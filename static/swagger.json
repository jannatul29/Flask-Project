{
    "openapi": "3.0.0",
    "info": {
      "description": "Hotel details",
      "version": "1.0.0",
      "title": "Hotel API",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "tags": [
      {
        "name": "Hotel API",
        "description": "Hote details"
      }
    ],
     "servers": [
          {
          "url": "/"
          }
      ],
      
         "components": {
          "schemas": {
              "store": {
                  "type": "object",
                  "properties": {
                      "title": {
                      "type": "string"
                      },
                      "herf": {
                      "type": "string"
                      },
                      "image": {
                        "type": "string"
                        },
                      "rating": {
                            "type": "string"
                            },
                        "price": {
                            "type": "string"
                            },
                        "location": {
                            "type": "string"
                            },
                        "amenities": {
                            "type": "string"
                            }
                  }
              },
              "register": {
                "type": "object",
                "properties": {
                    "public_id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "login": {
                "type": "object",
                "properties": {
                    "name": {
                    "type": "string"
                    },
                    "password": {
                        "type": "string"
                        }
                }
            }
                
          }
      },
       "paths": {
        "/register":{
            "post": {
                "tags": [
                    "signUp"
                ],
                "summary": "Add todo",
                "requestBody": {
                "description": "Post New todo To Database",
                "required": true,
                "content": {
                    "application/json": {
                    "schema": {
                        "$ref": "#/components/schemas/register"
                        }
                    }
                }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                        "$ref": "#/components/schemas/register"
                        }
                    },
                    "404": {
                        "description": "NOT FOUND",
                        "schema": {
                        "$ref": "#/components/schemas/register"
                        }
                    }
                }
            }
        },

        "/login":{
            "post": {
                "tags": [
                    "SignIn"
                ],
                "summary": "Add todo",
                "requestBody": {
                "description": "Post New todo To Database",
                "required": true,
                "content": {
                    "application/json": {
                    "schema": {
                        "$ref": "#/components/schemas/login"
                        }
                    }
                }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                        "$ref": "#/components/schemas/login"
                        }
                    },
                    "404": {
                        "description": "NOT FOUND",
                        "schema": {
                        "$ref": "#/components/schemas/login"
                        }
                    }
                }
            }
        },
         
          
          "/search":{
              "get" :{
                  "tags": [
                      "Get todos from API"
                  ],
                  "security": [
                    {
                       "bearerAuth": []
                    }
                 ],
                  "summary": "Get todos",
                  "parameters": [{
                    "name": "key",
                    "in": "query",
                    "description": "Give Api key",
                    "required": true,
                    "type": "string",
                    "schema" : {
                        "$ref": "#/components/schemas/store/properties/title"
                    }
                  },
                  {
                    "name": "title",
                    "in": "query",
                    "description": "Give hotel's name",
                    "required": false,
                    "type": "string",
                    "schema" : {
                        "$ref": "#/components/schemas/store/properties/title"
                    }
                  },
                  {
                    "name": "location",
                    "in": "query",
                    "description": "Give hotel's location",
                    "required": false,
                    "type": "string",
                    "schema" : {
                        "$ref": "#/components/schemas/store/properties/location"
                    }
                  },
                  {
                    "name": "amenities",
                    "in": "query",
                    "description": "Give hotel's amenities",
                    "required": false,
                    "type": "string",
                    "schema" : {
                        "$ref": "#/components/schemas/store/properties/amenities"
                    }
                  },
                  {
                    "name": "price",
                    "in": "query",
                    "description": "Give price",
                    "required": false,
                    "type": "string",
                    "schema" : {
                        "$ref": "#/components/schemas/store/properties/price"
                    }
                  },
                  {
                    "name": "sorting",
                    "in": "query",
                    "description": "price(asc for Ascending or dsc for Descending)",
                    "required": false,
                    "type": "string",
                    "schema" : {
                        "$ref": "#/components/schemas/store/properties/price"
                    }
                  }
                ],
                 
                  "responses": {
                  "200": {
                      "description": "OK",
                      "schema": {
                      "$ref": "#/components/schemas/store"
                      }
                  },
                  "404": {
                      "description": "NOT FOUND",
                      "schema": {
                      "$ref": "#/components/schemas/store"
                      }
              }
              }
              }
          }
  }
  }